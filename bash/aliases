# Aliases
# =====================

# LS
alias l='ls -lah'

# Git
alias gcl="git clone"
alias gst="git status"
alias gl="git pull"
alias gp="git push"
alias gd="git diff | mate"
alias gc="git commit -v"
alias gca="git commit -v -a"
alias gb="git branch"
alias gba="git branch -a"
alias gcam="git commit -am"
alias gcm="git commit -m"
alias gcb="git checkout -b"
alias gad="git add ."
alias lg1="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(black)%s%C(reset) %C(red)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
alias lg2="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"
alias gprune="git remote prune origin"
alias dmb="git branch --merged | egrep -v '(^\*|master|dev)' | xargs git branch -d"
gpsup="git push --set-upstream origin $(git_current_branch)"

# Shortcuts
alias instructor="cd ~/Development/code/instructor"
alias manager="cd ~/Development/code/learn-manager"
alias labs-team="cd ~/Development/code/labs-team"
alias ironboard="cd ~/Development/code/labs-team/ironboard"
alias registrar="cd ~/Development/code/labs-team/registrar_umbrella"
alias desktop="cd /Users/$USER/Desktop/$@"

# Misc.
alias pys="python -m SimpleHTTPServer"
alias bash-p="cd ~/Development/dotfiles/. && atom ."
alias reload!="source ~/.bash_profile"
alias be="bundle exec"

# Direnv
alias dea="direnv allow ."

# Rails
alias rdbm="rake db:migrate"

# Deploying
alias cssh='i2cssh -c'

# Docker
alias dc='docker-compose'
alias docker-compose='docker compose'

# Phoenix
alias pserver='iex -S mix phx.server'
alias ism='iex -S mix'
alias kil-bild='rm -rf _build/'

# Good feels
alias support="cowsay you are doing awesome"


alias aws-profile-qa="export AWS_DEFAULT_PROFILE=qa; export AWS_PROFILE=qa"
alias aws-profile-prod="export AWS_DEFAULT_PROFILE=prod; export AWS_PROFILE=prod"
alias aws-profile-dev="export AWS_DEFAULT_PROFILE=dev; export AWS_PROFILE=dev"
